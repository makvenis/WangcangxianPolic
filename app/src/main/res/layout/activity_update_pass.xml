<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.dell.wcx.sc.makvenis.dell.wcx.startActivity.UpdatePassActivity">


    <include layout="@layout/public_toolbar_simple"></include>

    <!-- app图标 -->
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/icon"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <!-- 账号密码登陆输入框 -->
    <LinearLayout
        android:orientation="vertical"
        style="@style/margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:enabled="false"
            android:id="@+id/user_name"
            android:hint="请输入账号"
            android:background="@drawable/bg_edittext_select"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/user_password"
            android:layout_marginTop="10dp"
            android:hint="请输入旧密码"
            android:background="@drawable/bg_edittext_select"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/user_password_two"
            android:layout_marginTop="10dp"
            android:hint="请输入新密码"
            android:background="@drawable/bg_edittext_select"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>

    <!-- 找回密码和注册
    <RelativeLayout
        android:layout_marginTop="10dp"
        style="@style/marginPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_mimazhaohui"
            style="@style/textPassWordStyle"
