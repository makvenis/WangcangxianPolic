<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#0173d3"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.dell.wcx.sc.makvenis.dell.wcx.login.UserLoginActivity">

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:src="@mipmap/icon_login_head"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_dl"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="22sp"
            android:text="登陆"
            android:background="@drawable/btn_login_bg_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/login_zc"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#0173d3"
            android:gravity="center"
            android:textSize="22sp"
            android:text="注册"
            android:background="@drawable/btn_login_bg_pressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:text="证书登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <TextView
        android:layout_weight="1"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:text="旺苍县公安局版权所有"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
