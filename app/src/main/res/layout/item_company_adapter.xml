<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/item_ImageView"
            android:src="@mipmap/icon_login_head"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <!-- 商家名称 -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#333333"
                    android:layout_gravity="center"
                    android:id="@+id/item_TextView_Name"
                    android:text="四川XXX行业服务公司"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 行业名称 -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_gravity="center"
                    android:textColor="#aeaeae"
                    android:text="行业名称:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="center"
                    android:textColor="#aeaeae"
                    android:textSize="12sp"
                    android:id="@+id/item_TextView_Style"
                    android:text="四川XXX行业服务公司"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 地址 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#aeaeae"
                    android:text="公司\单位地址:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                -->

                <TextView
                    android:textColor="#aeaeae"
                    android:id="@+id/item_TextView_Path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="asdasdasdadasdadsas" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


</LinearLayout>