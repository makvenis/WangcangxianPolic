<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.dell.wangcangxianpolic.login.RegisteActivity">

    <TextView
        android:textColor="#0173d3"
        android:gravity="center"
        android:textSize="24sp"
        android:text="欢迎登陆公安巡防"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <LinearLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="18sp"
            android:text="用户名:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/icon_registe_img_username"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/register_user_edit_name"
                android:textColor="#0173d3"
                android:paddingLeft="30dp"
                android:hint="请输入用户名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="18sp"
            android:text="密码:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/icon_registe_img_passworld"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/register_user_edit_pass"
                android:textColor="#0173d3"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:hint="请输入密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/register_user_wjmm"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="忘记密码?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/register_user_dl"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="22sp"
        android:text="登陆"
        android:background="@drawable/btn_login_bg_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:gravity="center"
        android:text="旺苍县公安局版权所有"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />







</LinearLayout>
