<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.dell.wangcangxianpolic.newCompanyPost.CompanyEditActivity">

    <include layout="@layout/public_toolbar_simple"></include>
    <TextView
        android:id="@+id/mCompany_Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mCompany_Recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/mCompanySubmit"
        android:text="测试返回数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
