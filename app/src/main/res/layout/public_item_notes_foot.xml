<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#9ea0a7"
        android:text="完成100%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- 进度条 -->
    <ProgressBar
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="100"
        android:progress="100"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- 其他违法行为 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查发现其他治安隐患(违法行为):"
            android:textColor="#9ea0a7"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/jc_zgnr"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext_select"
            android:gravity="top" />
    </LinearLayout>

    <!-- 规定采取措施 -->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:textColor="#9ea0a7"
            android:textSize="14sp"
            android:text="在规定期限(安全行为)采取措施,确保安全:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/bg_edittext_select"
            android:id="@+id/jc_cqcs"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/jc_zgtl"
            android:background="@null"
            android:textSize="14sp"
            android:text="根据治安保卫条例第"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/jc_zgtl_set"
            android:textSize="14sp"
            android:text="32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:textSize="14sp"
            android:text="条规定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- 时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <!-- 监察人签名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jc_zgsj"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="整改完毕时间:" />

            <TextView
                android:id="@+id/jc_zgsj_set"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1eb" />


    </LinearLayout>


    <!-- 监察人 -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 监察人签名 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/jc_other_jcryqz"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="检查人签名:" />

            <ImageView
                android:id="@+id/jc_other_jcryqz_set"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </LinearLayout>

        <!-- 分割线 -->
        <ImageView
            android:background="#e1e1eb"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </LinearLayout>


    <!-- 被监察人 -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 被监察人签名 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center"
                android:id="@+id/jc_other_bjcryqz"
                android:text="被检查单位负责人员签名:"
                android:layout_width="200dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/jc_other_bjcryqz_set"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </LinearLayout>

        <!-- 分割线 -->
        <ImageView
            android:background="#e1e1eb"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </LinearLayout>




    <!-- 提交数据按钮 -->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:paddingLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/jc_other_button_post"
            android:text="提交检查数据"
            android:background="#177ed5"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>