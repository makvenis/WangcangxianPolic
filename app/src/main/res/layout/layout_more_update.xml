<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="400dp">




                <!-- Group 1 -->
                <!-- 单位名称 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="单位名称"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/mMore_Name"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="请选择单位名称"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- 单位地址 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="单位地址"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/mMore_Addrs"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="请添加单位地址"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- 法人名称 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="法人"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/mMore_LevName"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="法人姓名"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Group 2 -->
                <!-- 管辖单位 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="管辖单位"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/mMore_GovName"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="请选择管辖单位"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- 组织类型 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="组织类型"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/mMore_AddrsType"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="请添加组织类型"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- 单位联系电话 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="联系电话"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/mMore_Phone"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="请输入联系电话"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- 法人性别 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="性别"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/mMore_Sex"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="请选择性别"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Group 3 -->

                <!-- 单位照片 -->
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:src="@drawable/icon_more_photo_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/mMore_Addrs_photo" />

                </RelativeLayout>
                <!-- 下划线 -->
                <ImageView
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- 管理等级 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#8d8d8d"
                        android:gravity="right|center"
                        android:text="管理等级"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/mMore_Lev"
                        android:textColorHint="#afafaf"
                        android:textColor="#afafaf"
                        android:textSize="18sp"
                        android:hint="请输入联系电话"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <!-- 下划线 -->
                <ImageView
                    android:layout_marginBottom="10dp"
                    android:background="#e7e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <!-- foot底部标线 -->
                <LinearLayout
                    android:background="#f00"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#fac"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:textColor="#fac"
                        android:padding="10dp"
                        android:text="到底了"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#fac"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>






            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>