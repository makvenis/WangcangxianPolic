<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.dell.wcx.sc.makvenis.dell.wcx.newCompanyPost.CompanyEditActivity">

    <include layout="@layout/public_toolbar_simple"
        android:id="@+id/include"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mCompany_Recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/mCompany_Submit"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="提交"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
