<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_weight="0.2"
            android:id="@+id/adapter_item_push_title_poto"
            android:src="@drawable/icon"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <LinearLayout
            android:layout_weight="0.6"
            android:paddingLeft="12dp"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/adapter_item_push_title_max"
                android:maxLines="1"
                android:textSize="16sp"
                android:text="习近平：深刻感悟和把握马义真理力量...."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/adapter_item_push_title_min"
                android:textColor="#d1d1d1"
                android:textSize="14sp"
                android:maxLines="1"
                android:text="新华社北京4月24日电　中共中央政治局4月23日下午就《共产党宣言》及其时代意义举行第五次集体学习。中共中..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/adapter_item_push_title_time"
                android:textSize="14sp"
                android:text="4-21 11:45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:background="#f00"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>